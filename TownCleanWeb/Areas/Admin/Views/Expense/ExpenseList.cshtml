@model IEnumerable<TCDBEntities.ExpenseSummary>
@{
    ViewBag.Title = "Expense List | Town Clean";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Expense List <small>All Branches</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="example" class="table table-striped responsive-utilities jambo_table">
                        <thead>
                            <tr class="headings">
                                <th>Expense Name </th>
                                <th>Expense Type </th>
                                <th>Expense Date </th>
                                <th>Description</th>
                                <th>Payment Mode </th>
                                <th>Attachment Url </th>
                               
                                <th class=" no-link last">
                                    <span class="nobr">View</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var quot = Model.ToList();

                                for (int i = 0; i < quot.Count; i++)
                                {
                                    if (i % 2 == 0)
                                    {
                                        <tr class="even pointer">
                                            <td class="a-center ">
                                                @quot[i].ExpenseName
                                            </td>
                                           
                                            <td class=" ">@quot[i].ExpenseType </td>
                                            <td class=" ">@quot[i].ExpenseDate</td>
                                            <td class=" ">
                                                @quot[i].Amount<br />
                                                Email: @quot[i].Description<br />
                                                Phone: @quot[i].PaymentMode
                                            </td>
                                            <td class=" ">@quot[i].Attachment_Url</td>
                                            
                                            <td class=" last">
                                                @Html.ActionLink("View", "ExpenseDetails", new { id = @quot[i].ExpenseID })
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="odd pointer">
                                            <td class="a-center ">
                                                @quot[i].ExpenseName
                                            </td>

                                            <td class=" ">@quot[i].ExpenseType </td>
                                            <td class=" ">@quot[i].ExpenseDate</td>
                                            <td class=" ">
                                                @quot[i].Amount<br />
                                                Email: @quot[i].Description<br />
                                                Phone: @quot[i].PaymentMode
                                            </td>
                                            <td class=" ">@quot[i].Attachment_Url</td>

                                            <td class=" last">
                                                @Html.ActionLink("View", "ExpenseDetails", new { id = @quot[i].ExpenseID })
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
    </div>
    <div class="clearfix"></div>
</div>

@section JavaScript
{
    <!-- Datatables -->
    <script src="../../js/datatables/js/jquery.dataTables.js"></script>
    <script src="../../js/datatables/tools/js/dataTables.tableTools.js"></script>
}
